@model List<Asos.FashionEmergency.Web.Controllers.Product>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "ASOS ASAP - Products";
}
@section Styles {
    <link href="@Url.Content("~/stylesheets/view-products.css")" rel="stylesheet" type="text/css" />
}
<div class="row">
    @foreach (var product in Model)
    {
        <div class="product col-lg-3 col-sm-4 col-xs-6">
            <img src="@product.ImageUrl"/>
            <div class="detail">
                <div class="availability">@product.Availability</div>
                <div class="price">@product.Price</div>
            </div>
            <!--
            <h2>@product.Name</h2>
            <p>@product.Description</p>
            -->
        </div>
    }
</div>
